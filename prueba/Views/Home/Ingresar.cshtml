@model Usuario
@{
    ViewData["Title"] = "Ingresar";
}

<div class="card">
  <div class="card-header">
    Usuario
  </div>
  <div class="card-body">
    

      <form asp-action="Ingresar" asp-controller="Home" method="post">
      <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" type="text" class="form-control">
        <span asp-validation-for="Nombre" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input asp-for="Apellido" type="text" class="form-control">
        <span asp-validation-for="Apellido" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label class="form-label">Telefono</label>
        <input asp-for="Telefono" type="text" class="form-control">
        <span asp-validation-for="Telefono" class="text-danger"></span>
      </div>
       <div class="mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="Correo" type="text" class="form-control">
        <span asp-validation-for="Correo" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary">Guardar</button>
      <a asp-action="Listar" asp-controller="Home" class="btn btn-warning">Volver a la lista</a>
    </form>


  </div>
</div>